{{#if addNewRestaurant}}
  <h2>New Restaurant</h2>
  <div>
    <form>
      <div class="form group">
        <label for="name">Name: </label>
        {{input value=name id="name"}}
      </div>

      <div class="form group">
        <label for="district">District: </label>
        {{input value=district id="district"}}
      </div>

      <div class="form group">
        <label for="image">Image URL: </label>
        {{input value=image id="image"}}
      </div>

      <button {{action "saveRestaurant1"}}>Save</button>
    </form>
  </div>

{{else}}
  <button {{action "restaurantFormShow"}}>New Restaurant</button>
{{/if}}
